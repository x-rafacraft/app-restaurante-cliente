<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.cuentasscreenview.CuentasActivity">

    <TableLayout
        android:id="@+id/tlCuenta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/llCuentaTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TableLayout>

    <LinearLayout
        android:id="@+id/llCuentaTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/fuego"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_carro_compra"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tvCuentaTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fuego"
            android:gravity="center"
            android:hint="Cuenta y Total cuenta"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>